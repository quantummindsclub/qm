<!-- templates/home.jinja -->
{% extends 'base.jinja' %}

{% block title %}Home{% endblock %}

{% block page_style %}

<link rel="stylesheet" href="{{ url_for('static', filename='css/dark.css') }}">

<style>
@media only screen and (min-width: 0rem) {
    #hero-227 {
        text-align: center;
        padding: 0 1rem;
        position: relative;
        z-index: 1;
        overflow: hidden;
    }
    #hero-227 .cs-picture {
        width: 100%;
        height: 100%;
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -2;
    }
    #hero-227 .cs-picture:before {
        content: "";
        width: 100%;
        height: 100%;
        background: #000;
        opacity: 0.6;
        position: absolute;
        display: block;
        top: 0;
        left: 0;
        z-index: 1;
        pointer-events: none;
    }
    #hero-227 .cs-picture img {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        object-fit: cover;
    }
    #hero-227 .cs-container {
        width: 100%;
        max-width: 80rem;
        padding: clamp(9rem, 25.95vw, 18.75rem) 0 0;
        padding-bottom: clamp(3.75rem, 12.5vw, 25rem);
        margin: auto;
        position: relative;
    }
    #hero-227 .cs-container:before {
        content: "";
        width: 1px;
        height: 100%;
        background: -moz-linear-gradient(
            top,
            rgba(250, 251, 252, 0.5) 0%,
            rgba(250, 251, 252, 0) 100%
        );
        background: -webkit-linear-gradient(
            top,
            rgba(250, 251, 252, 0.5) 0%,
            rgba(250, 251, 252, 0) 100%
        );
        opacity: 1;
        position: absolute;
        display: block;
        top: 0;
        left: 0;
    }
    #hero-227 .cs-flex-group {
        margin-bottom: clamp(3.75rem, 15.5vw, 13.75rem);
        margin-left: 1rem;
        width: 80vw;
        max-width: clamp(29rem, 60vw, 35.125rem);
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        flex-wrap: wrap;
        box-sizing: border-box;
    }
    #hero-227 .cs-topper {
        font-size: clamp(0.8125rem, 1.6vw, 1rem);
        line-height: 1.2em;
        text-transform: uppercase;
        text-align: left;
        letter-spacing: 0.1rem;
        font-weight: 700;
        color: var(--primaryLight);
        margin-bottom: 1rem;
        display: block;
    }
    #hero-227 .cs-title {
        font-size: clamp(2.4375rem, 6.4vw, 3.8125rem);
        font-weight: 900;
        line-height: 1.2em;
        text-align: left;
        width: 100%;
        margin: 0 auto clamp(2rem, 4vw, 2.5rem) 0;
        color: var(--bodyTextColorWhite);
        position: relative;
    }
    #hero-227 .cs-text {
        font-size: clamp(1rem, 1.95vw, 1.25rem);
        line-height: 1.5em;
        text-align: left;
        width: 100%;
        margin: 0 auto clamp(2rem, 4vw, 2.5rem) 0;
        margin-bottom: clamp(2.5rem, 4vw, 3rem);
        color: var(--bodyTextColorWhite);
    }
    #hero-227 .cs-button-solid {
        font-size: 1rem;
        line-height: clamp(2.875rem, 5.5vw, 3.5rem);
        width: 11.25rem;
        text-decoration: none;
        font-weight: 700;
        margin: 0 1.25rem 1rem 0;
        color: #fff;
        padding: 0;
        background-color: var(--primary);
        display: inline-block;
        position: relative;
        z-index: 1;
    }
    #hero-227 .cs-button-solid:before {
        content: "";
        position: absolute;
        display: block;
        height: 100%;
        width: 0%;
        background: #000;
        opacity: 1;
        top: 0;
        left: 0;
        z-index: -1;
        transition: width 0.3s;
    }
    #hero-227 .cs-button-solid:hover:before {
        width: 100%;
    }
    #hero-227 .cs-button-transparent {
        font-size: 1rem;
        line-height: clamp(2.875rem, 5.5vw, 3.5rem);
        width: 11.25rem;
        height: clamp(2.875rem, 5.5vw, 3.5rem);
        text-decoration: none;
        font-weight: 700;
        margin: 0;
        color: #fff;
        padding: 0;
        background-color: transparent;
        border: 1px solid var(--bodyTextColorWhite);
        box-sizing: border-box;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        position: relative;
        z-index: 1;
    }
    #hero-227 .cs-button-transparent:before {
        content: "";
        position: absolute;
        display: block;
        background: #000;
        opacity: 1;
        top: -1px;
        left: -1px;
        right: -1px;
        bottom: -1px;
        z-index: -1;
        transform-origin: left;
        transform: scaleX(0);
        transition: transform 0.3s;
    }
    #hero-227 .cs-button-transparent:hover:before {
        transform: scaleX(1);
    }
    #hero-227 .cs-button-transparent .cs-img {
        display: block;
        margin-right: 0.75rem;
    }
    #hero-227 .cs-card-group {
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
    }
    #hero-227 .cs-item {
        list-style: none;
        position: relative;
        box-sizing: border-box;
    }
    #hero-227 .cs-item:before {
        content: "";
        width: 100vw;
        height: 1px;
        background: -moz-linear-gradient(
            left,
            rgba(250, 251, 252, 0.5) 0%,
            rgba(250, 251, 252, 0) 100%
        );
        background: -webkit-linear-gradient(
            left,
            rgba(250, 251, 252, 0.5) 0%,
            rgba(250, 251, 252, 0) 100%
        );
        opacity: 1;
        position: absolute;
        display: block;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
    }
    #hero-227 .cs-item:last-of-type:after {
        content: "";
        width: 100vw;
        height: 1px;
        background: -moz-linear-gradient(
            left,
            rgba(250, 251, 252, 0.5) 0%,
            rgba(250, 251, 252, 0) 100%
        );
        background: -webkit-linear-gradient(
            left,
            rgba(250, 251, 252, 0.5) 0%,
            rgba(250, 251, 252, 0) 100%
        );
        opacity: 1;
        position: absolute;
        display: block;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
    }
    #hero-227 .cs-link {
        text-align: left;
        text-decoration: none;
        padding: 1.75rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        position: relative;
    }
    #hero-227 .cs-link:hover:before {
        opacity: 0.4;
    }
    #hero-227 .cs-link:before {
        content: "";
        width: 100%;
        height: 100%;
        background: var(--primary);
        opacity: 0;
        position: absolute;
        display: block;
        top: 0;
        left: 0;
        z-index: -1;
        transition: opacity 0.3s;
    }
    #hero-227 .cs-number {
        font-size: clamp(1.25rem, 2vw, 1.5625rem);
        line-height: 1.2em;
        font-weight: 900;
        margin-bottom: clamp(1.5rem, 4vw, 2rem);
        color: var(--primaryLight);
        display: block;
    }
    #hero-227 .cs-h2 {
        font-size: clamp(1rem, 2vw, 1.25rem);
        font-weight: 900;
        line-height: 1.2em;
        padding: 0;
        margin: 0;
        margin-bottom: 1rem;
        color: var(--bodyTextColorWhite);
        position: relative;
        z-index: 10000;
    }
    #hero-227 .cs-item-text {
        font-size: clamp(0.875rem, 3vw, 1rem);
        margin: 0;
        padding: 0;
        max-width: 31.25rem;
        color: var(--bodyTextColorWhite);
    }
}
@media only screen and (min-width: 48rem) {
    #hero-227 {
        padding: 0 clamp(2rem, 5vw, 2.5rem);
    }
    #hero-227 .cs-container {
        padding-bottom: 4rem;
    }
    #hero-227 .cs-container:after {
        content: "";
        width: 1px;
        height: 100%;
        background: -moz-linear-gradient(
            top,
            rgba(250, 251, 252, 0) 0%,
            rgba(250, 251, 252, 0.5) 100%
        );
        background: -webkit-linear-gradient(
            top,
            rgba(250, 251, 252, 0) 0%,
            rgba(250, 251, 252, 0.5) 100%
        );
        opacity: 1;
        position: absolute;
        display: block;
        top: 0;
        right: 0;
    }
    #hero-227 .cs-flex-group {
        margin-left: clamp(2.75rem, 5.9vw, 5.5rem);
    }
    #hero-227 .cs-button-solid {
        margin-bottom: 0;
    }
    #hero-227 .cs-card-group {
        flex-direction: row;
        position: relative;
    }
    #hero-227 .cs-card-group:before {
        content: "";
        width: 150vw;
        height: 1px;
        background: -moz-linear-gradient(
            left,
            rgba(250, 251, 252, 0.5) 0%,
            rgba(250, 251, 252, 0) 100%
        );
        background: -webkit-linear-gradient(
            left,
            rgba(250, 251, 252, 0.5) 0%,
            rgba(250, 251, 252, 0) 100%
        );
        opacity: 1;
        position: absolute;
        display: block;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
    }
    #hero-227 .cs-item:before {
        width: 1px;
        height: 100vh;
        background: -moz-linear-gradient(
            top,
            rgba(250, 251, 252, 0) 0%,
            rgba(250, 251, 252, 0.5) 100%
        );
        background: -webkit-linear-gradient(
            top,
            rgba(250, 251, 252, 0) 0%,
            rgba(250, 251, 252, 0.5) 100%
        );
        top: auto;
        left: auto;
        right: 0;
        bottom: -4rem;
    }
    #hero-227 .cs-item:nth-of-type(1) {
        /* makes the first line under the buttons shorter */
    }
    #hero-227 .cs-item:nth-of-type(1):before {
        height: 39.375rem;
    }
    #hero-227 .cs-item:last-of-type:before,
    #hero-227 .cs-item:last-of-type:after {
        display: none;
    }
    #hero-227 .cs-link {
        padding: clamp(2.75rem, 5.9vw, 5.5rem) clamp(3rem, 5.9vw, 5.5rem);
    }
}
@media only screen and (min-width: 81.25rem) {
    #hero-227 {
        background: url("{{ url_for('static', filename='images/wormhole.png') }}");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
    #hero-227 .cs-picture img {
        display: none;
    }
}
@media only screen and (min-width: 0rem) {
    body.dark-mode #hero-227 .cs-background:before {
        opacity: 0.8;
    }
}
</style>
{% endblock %}

{% block content %}

<section id="hero-227">
    <div class="cs-container">
        <div class="cs-flex-group">
            <span class="cs-topper">Welcome to Quantum Minds</span>
            <h1 class="cs-title">Empowering Minds to Shape the Future of Technology</h1>
            <p class="cs-text">
                Join us in exploring and innovating in fields such as Space Tech, Defense, AI, Cybersecurity, and more.
            </p>
            <a href="{{ url_for('home_routes.about') }}" class="cs-button-solid">Learn More</a>
            <a href="{{ url_for('contact_routes.contact') }}" class="cs-button-transparent">
                <img class="cs-img" decoding="async" src="https://csimg.nyc3.digitaloceanspaces.com/Hero/play.svg" alt="play icon" width="17" height="17" aria-hidden="true">
                Get in Touch
            </a>
        </div>
        <ul class="cs-card-group">
            <li class="cs-item">
                <span class="cs-link">
                    <span class="cs-number">Space Technology</span>
                    <h2 class="cs-h2">Exploring the Final Frontier</h2>
                    <p class="cs-item-text">
                        We delve into cutting-edge advancements in space exploration, contributing to missions and innovations that push the boundaries of human knowledge.
                    </p>
                </span>
            </li>
            <li class="cs-item">
                <span class="cs-link">
                    <span class="cs-number">Defense Technology</span>
                    <h2 class="cs-h2">Securing Our Future</h2>
                    <p class="cs-item-text">
                        Focusing on technological solutions to enhance national security, we collaborate on projects related to defense technology and preparedness.
                    </p>
                </span>
            </li>
            <li class="cs-item">
                <span class="cs-link">
                    <span class="cs-number">Artificial Intelligence</span>
                    <h2 class="cs-h2">Innovating with AI</h2>
                    <p class="cs-item-text">
                        We develop AI-powered solutions to solve real-world problems, focusing on machine learning, data analytics, and automation.
                    </p>
                </span>
            </li>
        </ul>
        <ul class="cs-card-group">
            <li class="cs-item">
                <span class="cs-link">
                    <span class="cs-number">Cybersecurity</span>
                    <h2 class="cs-h2">Safeguarding the Digital World</h2>
                    <p class="cs-item-text">
                        Our projects in cybersecurity aim to protect digital infrastructures and secure sensitive information in an increasingly connected world.
                    </p>
                </span>
            </li>
            <li class="cs-item">
                <span class="cs-link">
                    <span class="cs-number">Startups & Entrepreneurship</span>
                    <h2 class="cs-h2">Fostering Innovation</h2>
                    <p class="cs-item-text">
                        We support aspiring entrepreneurs in turning their ideas into startups, helping them navigate the complexities of business development and innovation.
                    </p>
                </span>
            </li>
            <li class="cs-item">
                <span class="cs-link">
                    <span class="cs-number">Research & Development</span>
                    <h2 class="cs-h2">Driving Research and Innovation</h2>
                    <p class="cs-item-text">
                        With a strong research orientation, we encourage members to engage in cutting-edge research and collaborate on solving real-world technological challenges.
                    </p>
                </span>
            </li>
        </ul>
    </div>

    <picture class="cs-picture">
        <source media="(max-width: 600px)" srcset="{{ url_for('static', filename='images/wormhole.png') }}">
        <source media="(min-width: 601px)" srcset="{{ url_for('static', filename='images/wormhole.png') }}">
        <img decoding="async" src="{{ url_for('static', filename='images/wormhole.png') }}" alt="mountains" width="2250" height="1500" aria-hidden="true">
    </picture>
</section>

